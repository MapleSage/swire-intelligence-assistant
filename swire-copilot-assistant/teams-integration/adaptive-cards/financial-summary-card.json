{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://swire-assets.blob.core.windows.net/icons/finance-icon.png",
                                    "size": "Small",
                                    "style": "Person"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "üìä Financial Summary",
                                    "weight": "Bolder",
                                    "size": "Medium",
                                    "color": "Accent"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${period}",
                                    "size": "Small",
                                    "color": "Default",
                                    "isSubtle": true
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "FactSet",
                    "facts": [
                        {
                            "title": "üí∞ Revenue:",
                            "value": "‚Ç¨${formatNumber(revenue)}"
                        },
                        {
                            "title": "üí∏ Expenses:",
                            "value": "‚Ç¨${formatNumber(expenses)}"
                        },
                        {
                            "title": "üìà Net Income:",
                            "value": "‚Ç¨${formatNumber(netIncome)}"
                        },
                        {
                            "title": "üìä Budget Variance:",
                            "value": "${budgetVariance}%"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "### üéØ Key Performance Indicators",
                    "weight": "Bolder",
                    "size": "Medium",
                    "spacing": "Medium"
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${kpi1.name}",
                                            "weight": "Bolder"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "${kpi1.value} (Target: ${kpi1.target})",
                                            "size": "Small"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${if(kpi1.trend == 'up', 'üìà', if(kpi1.trend == 'down', 'üìâ', '‚û°Ô∏è'))}",
                                            "size": "Large"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "Graph",
                    "someProperty": "Revenue Trend",
                    "fallback": {
                        "type": "TextBlock",
                        "text": "üìä **Revenue Trend:** ${revenueTrend}% vs previous period"
                    }
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "### üí° Key Insights",
                    "weight": "Bolder",
                    "size": "Medium",
                    "spacing": "Medium"
                },
                {
                    "type": "TextBlock",
                    "text": "${insights}",
                    "wrap": true,
                    "size": "Small"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "üìà View Detailed Trends",
            "data": {
                "action": "viewTrends",
                "type": "finance",
                "period": "${period}"
            }
        },
        {
            "type": "Action.Submit",
            "title": "üîç Drill Down by Department",
            "data": {
                "action": "drillDown",
                "type": "finance",
                "breakdown": "department"
            }
        },
        {
            "type": "Action.Submit",
            "title": "üìã Generate Report",
            "data": {
                "action": "generateReport",
                "type": "finance",
                "format": "pdf"
            }
        },
        {
            "type": "Action.OpenUrl",
            "title": "üìä Open in Power BI",
            "url": "https://app.powerbi.com/groups/swire-finance/reports/financial-dashboard"
        }
    ],
    "selectAction": {
        "type": "Action.Submit",
        "data": {
            "action": "cardSelected",
            "type": "financialSummary"
        }
    }
}