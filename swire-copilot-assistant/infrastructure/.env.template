# Environment Configuration Template for Swire Intelligence Assistant
# Copy this file to .env and fill in the actual values

# Environment Settings
ENVIRONMENT=dev
AZURE_LOCATION=westeurope
RESOURCE_PREFIX=swire-copilot

# Azure Subscription
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here

# Resource Group
RESOURCE_GROUP_NAME=swire-copilot-dev-rg

# Azure OpenAI Service
OPENAI_SERVICE_NAME=swire-copilot-dev-openai
OPENAI_ENDPOINT=https://swire-copilot-dev-openai.openai.azure.com/
OPENAI_API_VERSION=2023-12-01-preview
OPENAI_GPT4_DEPLOYMENT=gpt-4
OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Azure Cognitive Search
SEARCH_SERVICE_NAME=swire-copilot-dev-search
SEARCH_ENDPOINT=https://swire-copilot-dev-search.search.windows.net
SEARCH_INDEX_NAME=swire-knowledge-base
SEARCH_API_VERSION=2023-11-01

# Azure Storage
STORAGE_ACCOUNT_NAME=swirecopilotdevstorage
STORAGE_DOCUMENTS_CONTAINER=documents
STORAGE_KNOWLEDGE_BASE_CONTAINER=knowledge-base

# Azure Key Vault
KEY_VAULT_NAME=swire-copilot-dev-kv
KEY_VAULT_URL=https://swire-copilot-dev-kv.vault.azure.net/

# Application Insights
APP_INSIGHTS_NAME=swire-copilot-dev-insights
APP_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Microsoft Copilot Studio
COPILOT_STUDIO_ENVIRONMENT_ID=your-copilot-studio-environment-id
COPILOT_STUDIO_BOT_ID=your-bot-id

# Power Platform
POWER_PLATFORM_ENVIRONMENT_URL=https://your-environment.crm.dynamics.com/
POWER_PLATFORM_CLIENT_ID=your-power-platform-client-id
POWER_PLATFORM_CLIENT_SECRET=your-power-platform-client-secret

# Microsoft Teams
TEAMS_APP_ID=your-teams-app-id
TEAMS_BOT_ID=your-teams-bot-id

# Microsoft Graph API
GRAPH_CLIENT_ID=your-graph-client-id
GRAPH_CLIENT_SECRET=your-graph-client-secret
GRAPH_TENANT_ID=your-tenant-id

# Enterprise Data Sources
FINANCE_API_ENDPOINT=https://your-finance-api.com
FINANCE_API_KEY=your-finance-api-key

HSE_DATABASE_CONNECTION=Server=your-hse-server;Database=HSE_DB;Authentication=Active Directory Default;
HR_GRAPH_SCOPE=https://graph.microsoft.com/.default

# Security Settings
ENABLE_AUDIT_LOGGING=true
ENABLE_DLP_POLICIES=true
ENABLE_CONDITIONAL_ACCESS=true
DATA_RETENTION_DAYS=90

# Compliance Settings
EU_DATA_RESIDENCY_REQUIRED=true
GDPR_COMPLIANCE_ENABLED=true
AUDIT_LOG_RETENTION_YEARS=7

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_MINUTES=60
RATE_LIMIT_PER_MINUTE=1000

# Logging
LOG_LEVEL=INFO
ENABLE_TELEMETRY=true
ENABLE_PERFORMANCE_MONITORING=true